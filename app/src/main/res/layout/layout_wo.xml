<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/silver"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <View
                        android:layout_alignParentBottom="true"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"/>

                    <ImageView
                        android:id="@+id/avatar"
                        android:elevation="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/round_chat"
                        android:src="@drawable/head_hold"
                        android:scaleType="centerCrop"
                        android:padding="2dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_toRightOf="@+id/avatar"
                        android:text="用户名"
                        android:lines="1"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <TextView
                        android:id="@+id/nickname"
                        android:textSize="16sp"
                        android:layout_toRightOf="@+id/avatar"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="45dp"
                        android:text="昵称"
                        android:lines="1"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/deviceid"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/icon"
                        android:padding="6dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/shouji"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:id="@+id/text"
                        android:text="设置设备ID"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/icon"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <TextView
                        android:text="NEW"
                        android:visibility="gone"
                        android:layout_toRightOf="@+id/text"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/dot_red"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/arrow"
                        android:src="@drawable/arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:layout_toLeftOf="@+id/arrow"
                        android:layout_alignParentRight="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        tools:ignore="RtlHardcoded">

                        <ImageView
                            android:padding="5dp"
                            android:src="@drawable/head"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            tools:ignore="RtlHardcoded" />

                        <View
                            android:background="@drawable/red_dot"
                            android:layout_alignParentRight="true"
                            android:layout_width="10dp"
                            android:layout_height="10dp"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/userinfo"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/icon1"
                        android:padding="6dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/touxiang"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:id="@+id/text1"
                        android:text="修改用户信息"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/icon1"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <TextView
                        android:text="NEW"
                        android:visibility="gone"
                        android:layout_toRightOf="@+id/text1"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/dot_red"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/arrow1"
                        android:src="@drawable/arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:layout_toLeftOf="@+id/arrow1"
                        android:layout_alignParentRight="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        tools:ignore="RtlHardcoded">

                        <ImageView
                            android:padding="5dp"
                            android:src="@drawable/head"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            tools:ignore="RtlHardcoded" />

                        <View
                            android:background="@drawable/red_dot"
                            android:layout_alignParentRight="true"
                            android:layout_width="10dp"
                            android:layout_height="10dp"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/icon2"
                        android:padding="6dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/shoucang"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:id="@+id/text2"
                        android:text="收藏"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/icon2"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <TextView
                        android:text="NEW"
                        android:visibility="gone"
                        android:layout_toRightOf="@+id/text2"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/dot_red"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/arrow2"
                        android:src="@drawable/arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:layout_toLeftOf="@+id/arrow2"
                        android:layout_alignParentRight="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        tools:ignore="RtlHardcoded">

                        <ImageView
                            android:padding="5dp"
                            android:src="@drawable/head"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            tools:ignore="RtlHardcoded" />

                        <View
                            android:background="@drawable/red_dot"
                            android:layout_alignParentRight="true"
                            android:layout_width="10dp"
                            android:layout_height="10dp"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/icon3"
                        android:padding="6dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/xiangce"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:id="@+id/text3"
                        android:text="相册"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/icon3"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <TextView
                        android:text="NEW"
                        android:visibility="gone"
                        android:layout_toRightOf="@+id/text3"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/dot_red"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/arrow3"
                        android:src="@drawable/arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:layout_toLeftOf="@+id/arrow3"
                        android:layout_alignParentRight="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        tools:ignore="RtlHardcoded">

                        <ImageView
                            android:padding="5dp"
                            android:src="@drawable/head"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            tools:ignore="RtlHardcoded" />

                        <View
                            android:background="@drawable/red_dot"
                            android:layout_alignParentRight="true"
                            android:layout_width="10dp"
                            android:layout_height="10dp"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/icon4"
                        android:padding="6dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/xiaolian"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:id="@+id/text4"
                        android:text="表情"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/icon4"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <TextView
                        android:text="NEW"
                        android:visibility="gone"
                        android:layout_toRightOf="@+id/text4"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/dot_red"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/arrow4"
                        android:src="@drawable/arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:layout_toLeftOf="@+id/arrow4"
                        android:layout_alignParentRight="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        tools:ignore="RtlHardcoded">

                        <ImageView
                            android:padding="5dp"
                            android:src="@drawable/head"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            tools:ignore="RtlHardcoded" />

                        <View
                            android:background="@drawable/red_dot"
                            android:layout_alignParentRight="true"
                            android:layout_width="10dp"
                            android:layout_height="10dp"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/logout"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/icon9"
                        android:padding="6dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/tuichu"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <TextView
                        android:id="@+id/text9"
                        android:text="退出登录"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/icon9"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <TextView
                        android:text="NEW"
                        android:visibility="gone"
                        android:layout_toRightOf="@+id/text9"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/dot_red"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/arrow9"
                        android:src="@drawable/arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:layout_toLeftOf="@+id/arrow9"
                        android:layout_alignParentRight="true"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        tools:ignore="RtlHardcoded">

                        <ImageView
                            android:padding="5dp"
                            android:src="@drawable/head"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            tools:ignore="RtlHardcoded" />

                        <View
                            android:background="@drawable/red_dot"
                            android:layout_alignParentRight="true"
                            android:layout_width="10dp"
                            android:layout_height="10dp"/>

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</RelativeLayout>